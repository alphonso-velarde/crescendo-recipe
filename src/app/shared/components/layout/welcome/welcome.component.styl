 @import "../../../../../styles/config"

.welcome
    &--img
        background-image: url(../../../../../assets/header-image.jpg);
        height: 100%;
        width: 100%;
        background-repeat: no-repeat;
        background-size: 100%;
        position: relative;
        background-attachment: fixed;
    &--container
        height:400px;
        @media screen and (max-width: 768px) 
            height: 65px
    &--text
        position: absolute
        bottom: 8px;
        left: 50px;
        color: $white-color;
        font-size: 40px;
        @media screen and (max-width: 1280px)
            bottom: 100px;
        @media screen and (max-width: 768px)
            left: 10px;
            bottom: 10px;
            font-size: 18px;
        
    &--p
        background-color: $black-color;
        padding: 0 10px;
